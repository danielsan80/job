{% extends '::base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="/bundles/idrolabjobeet/css/main.css" />
{% endblock %}

{% block body %}

    <div id="container">
      <div id="header">
        {% block header %}
            <div class="content">
              <h1><a href="{{ url('home') }}">
                {% image '@IdrolabJobeetBundle/Resources/public/images/logo.jpg'
                        output='/img/logo.jpg' %}
                   <img src="{{ asset_url }}" alt="Jobeet Job Board"/>
                {% endimage %}
              </a></h1>

              <div id="sub_header">
                <div class="post">
                  <h2>Ask for people</h2>
                  <div>
                    <a href="{{ url('job_new') }}">Post a Job</a>
                  </div>
                </div>

                <div class="search">
                  <h2>Ask for a job</h2>
                  <form action="" method="get">
                    <input type="text" name="keywords"
                      id="search_keywords" />
                    <input type="submit" value="search" />
                    <div class="help">
                      Enter some keywords (city, country, position, ...)
                    </div>
                  </form>
                </div>
              </div>

            </div>
         {% endblock %}
      </div>

      <div id="content">
        {% block flashes %}
           {% if app.session.flashbag.all|length %}
              <div class="flashes">
                  {% for type, message in app.session.flashbag.all %}
                      <div class="flash_{{type}}">
                        {{ message }}
                      </div>
                  {% endfor %}
              </div>
            {% endif %}
        {% endblock %}
        <div class="content">
          {% block content %}
          {% endblock %}
        </div>
      </div>

      <div id="footer">
        {% block footer %}
          <div class="content">
            <span class="symfony">
              {% image '@IdrolabJobeetBundle/Resources/public/images/jobeet-mini.png'
                    output='/img/jobeet-mini.png' %}
               <img src="{{ asset_url }}"/>
              {% endimage %}
              powered by <a href="{{ url('home') }}">
              {% image '@IdrolabJobeetBundle/Resources/public/images/symfony.gif'
                    output='/img/jobeet-mini.png' %}
               <img src="{{ asset_url }}"  alt="symfony framework"/>
              {% endimage %}
              </a>
            </span>
            <ul>
              <li><a href="">About Jobeet</a></li>
              <li class="feed"><a href="">Full feed</a></li>
              <li><a href="">Jobeet API</a></li>
              <li class="last"><a href="">Affiliates</a></li>
            </ul>
          </div>
        {% endblock %}
      </div>
    </div>

 {% endblock %}